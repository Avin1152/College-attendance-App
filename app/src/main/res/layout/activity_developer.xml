<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">

    <ImageView
        android:id="@+id/aksimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="60dp" />

    <TextView
        android:id="@+id/aks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="AVINASH KUMAR SINGH"
        android:textAlignment="center"
        android:textColorLink="#37C93E"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/aksimg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/aks1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="17CSE141"
        android:textAlignment="center"
        android:textColorLink="#37C93E"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/aks"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/akimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/aks1"
        app:srcCompat="@mipmap/avinashkumar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/ak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="AVINASH KUMAR"
        android:textAlignment="center"
        android:textColorLink="#37C93E"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/akimg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/ak1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="17CSE030"
        android:textAlignment="center"
        android:textColorLink="#37C93E"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/ak"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />
</android.support.constraint.ConstraintLayout>